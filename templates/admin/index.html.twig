{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <style>
        img{
            width: 200px;
            border-radius: 30px;
        }

        .col-3, .col-9{
            display: flex;
            align-items: center;
        }
        .col-3{
            justify-content: center;
        }
        
        .card{
            flex-direction: unset;
            margin: 15px 0;
            justify-content: center;
        }
    </style>

    <div class="container" style="margin-top: 50px">
        <h1>Administration</h1>
        <div class="card row">
            <div class="col-3">
                <img src="/assets/images/admin/index/shop.png" alt="" style="padding-bottom: 20px">
            </div>
            <div class="card-body col-9">
                <div class="inline-body">
                    <h5 class="card-title">Liste des magasins</h5>
                    <p class="card-text">Nombre de magasins : {{ count_shops }}</p>
                    <a href="{{ path('admin.shop.index') }}" class="btn btn-primary">Modifier</a>
                </div>
            </div>
        </div>
        <div class="card row">
            <div class="col-3">
                <img src="/assets/images/admin/index/product.png" alt="">
            </div>
            <div class="card-body col-9">
                <div class="inline-body">
                    <h5 class="card-title">Liste des articles</h5>
                    <p class="card-text">Nombre d'articles : {{ count_articles }}</p>
                    <a href="#" class="btn btn-primary">Modifier</a>
                </div>
            </div>
        </div>
        <div class="card row">
            <div class="col-3">
                <img src="/assets/images/admin/index/order.png" alt="">
            </div>
            <div class="card-body col-9">
                <div class="inline-body">
                    <h5 class="card-title">Liste des commandes</h5>
                    <p class="card-text">Nombre de commandes : {{ count_orders }}</p>
                    <a href="{{ path('admin.order.index') }}" class="btn btn-primary">Modifier</a>
                </div>
            </div>
        </div>
        <div class="card row">
            <div class="col-3">
                <img src="/assets/images/admin/index/user.png" alt="">
            </div>
            <div class="card-body col-9">
                <div class="inline-body">
                    <h5 class="card-title">Liste des utilisateurs</h5>
                    <p class="card-text">Nombre d'utilisateurs : {{ count_users }}</p>
                    <a href="{{ path('admin.user.index') }}" class="btn btn-primary">Modifier</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
